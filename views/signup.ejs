            </svg>
              <img src="./fundain_logo.png" alt="" class="Logo_texture" width="80%">
              <div><i class="fa fa-address-card-o" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field1" type="text" name="first_name" placeholder="First Name"
                required >  <br>
              </div>
                <div><i class="fa fa-address-card-o" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field2" type="text" name="last_name" placeholder="Last Name"
                required><br>
              </div>
                <div><i class="fa fa-thumb-tack" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field3" type="text"  name="country" placeholder="Country" required><br>
          </div>
            <div><i class="fa fa-mobile" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field4" type="tel"  name="phoneNumber" placeholder="Phone Number"
                required><br>
              </div>
                <div><i class="fa fa-envelope-o" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field5" type="email" name="emailAddress" placeholder="Email" required><br>
          </div>
            <div><i class="fa fa-unlock-alt" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field6" type="password" name="password" placeholder="Password" 
                required> <br>
              </div>
                <div><i class="fa fa-unlock-alt" aria-hidden="true"></i>
            <input style="margin-bottom: 10px; width: 280px;" class="fields field7" type="password" name="confirm_pass" placeholder="Confirm Password"
                required><br>
              </div>
                <div>
            <input type="checkbox"> <span style="color:rgba(255, 255, 255, 0.61)">I agree with the <a href="">Terms</a></span><br>
          </div>
            <button style="margin-top: 15px;" class="fields button1" type="submit" >Register</button>
            <a href=""><p >Already a member?</p></a>
        </form>
        </main>
        <aside>
          <ul>
            <li>SignIn</li>
            <li id="signUP" >SignUp</li>
          </ul>
        </aside>
      </div>
      <footer></footer>
    </div>
  </body>
</html>

